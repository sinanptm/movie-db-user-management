<title><%= title %></title>
<% include('../layouts/header.ejs') %>
 <header>
      <div class="site-name">Movies Hub</div>
    </header>

    <nav class="px-5">
      <a href="/home">Home</a>
      <a href="/home?type=Movie">Movies</a>
      <a href="/home?type=Anime">Anime</a>
      <a onclick="logout()" class="logout-btn">Logout</a>
    </nav>
    <section>
      
      <% show.forEach((show)=> { %>
      <div class="card mb-4 mx-3" style="width: 18rem">
        <div style="height: 18rem; overflow: hidden">
          <img
            src="<%= show.src %>"
            class="card-img-top"
            alt="<%= show.name %>"
            style="width: 100%; height: 100%; object-fit: cover"
          />
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= show.name %></h5>
          <p class="card-text"><%= show.descrption %></p>
          <a href="https://www.marvel.com/movies" class="btn btn-primary"
            >Watch Now</a
          >
        </div>
      </div>
      <% }); %>
    </section>


    <style>
      body {
  min-height: 100vh; /* Set minimum height to at least the viewport height */
  font-family: "Arial", sans-serif;
  margin: 0;
  padding: 0;
  background: linear-gradient(45deg, #5d5c61, #379683);
  color: #b1a296;
}

header {
  background: linear-gradient(45deg, #557a95, #7395ae);
  color: #fff;
  padding: 20px;
  text-align: center;
}

nav {
  position: sticky;
  background: linear-gradient(45deg, #557a95, #7395ae);
  color: #fff;
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

nav a {
  color: #fff;
  text-decoration: none;
  padding: 10px;
  margin: 0 10px;
  border-radius: 5px;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

nav a:hover {
  background-color: #5d5c61;
  transform: scale(1.1);
}

.logout-btn {
  background-color: #7395ae;
  border: none;
  color: #fff;
  padding: 10px;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.logout-btn:hover {
  background-color: #5d5c61;
  transform: scale(1.1);
}

section {
  margin: 20px;
  padding: 20px;
  background: linear-gradient(45deg, #557a95, #7395ae);
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  opacity: 0;
  animation: fadeIn 1s ease-in-out forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

section {
  margin: 20px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: flex-start;
}

.card {
  width: 300px;
  margin: 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease-in-out;
}

.card:hover {
  transform: scale(1.05);
}

.card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-bottom: 1px solid #ddd;
}

.card-body {
  padding: 16px;
}

.card-title {
  font-size: 1.5rem;
  margin-bottom: 10px;
}

.card-text {
  color: #f1ebeb;
}

.btn-primary {
  display: inline-block;
  padding: 8px 16px;
  background-color: #8eabc0;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.btn-primary:hover {
  background-color: #5d5c61;
  transform: scale(1.1);
}
.site-name {
  font-family: "Arial", sans-serif;
  font-size: 2em;
  color: #74c2f6;
  text-transform: uppercase;
  letter-spacing: 2px;
  text-align: center;
}

.container {
  min-height: 100vh;
  overflow: auto;
}

    </style>

    <script>
      function logout() {
        window.location.href = "/lfdocfdsdfsgfodsfufdt";
      }
    </script>
